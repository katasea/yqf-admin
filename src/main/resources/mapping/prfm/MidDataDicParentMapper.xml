<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.main.dao.prfm.MidDataDicParentDao">
    <resultMap id="BaseResultMap" type="com.main.pojo.prfm.MidDataDicParent">
    	<id column="companyid" property="companyid" jdbcType="VARCHAR"/>
    	<id column="id" property="id" jdbcType="VARCHAR"/>
	    <result column="name" property="name" jdbcType="VARCHAR"/>
	    <result column="orderid" property="orderid" jdbcType="INTEGER"/>
    </resultMap>
    <sql id="Base_Column_List">
    companyid,id,name,orderid
    </sql>


    <sql id="Add_Column_List">
    companyid,id,name,orderid
    </sql>
    <select id="selectByid" resultMap="BaseResultMap" parameterType="map">
        select
        <include refid="Base_Column_List"/>
    from PD_MIDDATADICPARENT
        where id = #{id}
    </select>
    <select id="getAutoGeneralID" resultType="java.util.Map">
        select max(id) as id
    from PD_MIDDATADICPARENT
        where 1=1
    </select>
    <select id="getCount" resultType="java.util.Map">
        select count(1) as count
    from PD_MIDDATADICPARENT
        where 1=1
        and companyid = #{companyid}
        <choose>
            <when test="keyword != null and keyword != '' and keyword != 'null' and keyword != '请输入关键字'">
                and (
                  id like '${keyword}%'
                   or
                  name like '${keyword}%'
                                  )
            </when>
        </choose>
    </select>

    <select id="getAll" resultMap="BaseResultMap">
        select
        <include refid="Base_Column_List"/>
    from PD_MIDDATADICPARENT
        where 1=1 and companyid = #{companyid}
    </select>

    <!--如果不是带年份的表，需要自己加入年份过滤，这里不好知道年份字段的数据库名称 -->
    <select id="validator" resultType="java.util.Map">
        select
        <include refid="Base_Column_List"/>
    from PD_MIDDATADICPARENT
        where 1=1 and ${key} = #{value} and companyid = #{bridge.companyid}
    </select>


    <select id="get" resultMap="BaseResultMap" parameterType="map">
        select
        <include refid="Base_Column_List"/>
    from PD_MIDDATADICPARENT
        where 1=1 and companyid = #{companyid}
        <choose>
            <when test="keyword != null and keyword != '' and keyword != 'null' and keyword != '请输入关键字'">
            
                and (
                  id like '${keyword}%'
                   or
                  name like '${keyword}%'
                                  )
            </when>
            <otherwise>
            </otherwise>
        </choose>
        order by id
    </select>

    <select id="getPage" resultMap="BaseResultMap" parameterType="map">
        select
        <include refid="Base_Column_List"/>
        from
        (
            select
            <include refid="Base_Column_List"/>
            ,row_number() over
            (
            order by
                 companyid,
                              id asc
            ) n
           from PD_MIDDATADICPARENT
            where 1=1
            <if test="deptOrper != null || deptOrper != ''" >
                and id in (select parentid from pd_middatadic
                where companyid=#{companyid}
                and deptorper=#{deptOrper} and isstop = '0' and type = '1')
            </if>
            and companyid = #{companyid}
            <choose>
                <when test="keyword != null and keyword != '' and keyword != 'null' and keyword != '请输入关键字'">
                    and (
                          id like '${keyword}%'
                           or
                          name like '${keyword}%'
                                              )
                </when>
            </choose>
        ) a
        where a.n &gt; #{start}
        and a.n &lt;= #{end}
    </select>

    <insert id="insert" parameterType="map">
        insert into
            PD_MIDDATADICPARENT
        (
        <include refid="Add_Column_List"/>
        )
        values(#{companyid},#{id},#{name},#{orderid})
    </insert>

    <update id="update" parameterType="map">
        update
            PD_MIDDATADICPARENT
        set
                companyid = #{companyid},
                id = #{id},
                name = #{name},
                orderid = #{orderid}        where id = #{whereId}
    </update>
    <delete id="deleteByPrimaryKey" parameterType="map">
        delete from
            PD_MIDDATADICPARENT
        where id = #{id}
    </delete>
    <delete id="deleteAll">
          delete from PD_MIDDATADICPARENT where 1=1

    </delete>
</mapper>