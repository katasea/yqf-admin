<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.main.dao.prfm.BaseFormulaDao">
    <resultMap id="BaseResultMap" type="com.main.pojo.prfm.BaseFormula">
    	<id column="companyid" property="companyid" jdbcType="VARCHAR"/>
    	<id column="name" property="name" jdbcType="VARCHAR"/>
	    <result column="formula" property="formula" jdbcType="VARCHAR"/>
	    <result column="isstop" property="isstop" jdbcType="VARCHAR"/>
	    <result column="type" property="type" jdbcType="VARCHAR"/>
    </resultMap>
    <sql id="Base_Column_List">
    companyid,name,formula,isstop,type
    </sql>


    <sql id="Add_Column_List">
    companyid,name,formula,isstop,type
    </sql>
    <select id="selectByname" resultMap="BaseResultMap" parameterType="map">
        select
        <include refid="Base_Column_List"/>
    from PD_BASEFORMULA
        where name = #{id}
    </select>
    <select id="getAutoGeneralID" resultType="java.util.Map">
        select max(name) as id
    from PD_BASEFORMULA
        where 1=1
    </select>
    <select id="getCount" resultType="java.util.Map">
        select count(1) as count
    from PD_BASEFORMULA
        where 1=1
        and companyid = #{companyid}
        <choose>
            <when test="keyword != null and keyword != '' and keyword != 'null' and keyword != '请输入关键字'">
                and (
                  name like '${keyword}%'
                   or
                  formula like '${keyword}%'
                                  )
            </when>
        </choose>
    </select>

    <select id="getAll" resultMap="BaseResultMap">
        select
        <include refid="Base_Column_List"/>
    from PD_BASEFORMULA
        where 1=1 and companyid = #{companyid}
    </select>

    <!--如果不是带年份的表，需要自己加入年份过滤，这里不好知道年份字段的数据库名称 -->
    <select id="validator" resultType="java.util.Map">
        select
        <include refid="Base_Column_List"/>
    from PD_BASEFORMULA
        where 1=1 and ${key} = #{value} and companyid = #{bridge.companyid}
    </select>


    <select id="get" resultMap="BaseResultMap" parameterType="map">
        select
        <include refid="Base_Column_List"/>
    from PD_BASEFORMULA
        where 1=1 and companyid = #{companyid}
        <choose>
            <when test="keyword != null and keyword != '' and keyword != 'null' and keyword != '请输入关键字'">
            
                and (
                  name like '${keyword}%'
                   or
                  formula like '${keyword}%'
                                  )
            </when>
            <otherwise>
            </otherwise>
        </choose>
        order by name
    </select>

    <select id="getPage" resultMap="BaseResultMap" parameterType="map">
        select
        <include refid="Base_Column_List"/>
        from
        (
            select
            <include refid="Base_Column_List"/>
            ,row_number() over
            (
            order by
                 companyid,
                              name asc
            ) n
           from PD_BASEFORMULA
            where 1=1
            and companyid = #{companyid}
            <choose>
                <when test="keyword != null and keyword != '' and keyword != 'null' and keyword != '请输入关键字'">
                    and (
                          name like '${keyword}%'
                           or
                          formula like '${keyword}%'
                                              )
                </when>
            </choose>
        ) a
        where a.n &gt; #{start}
        and a.n &lt;= #{end}
    </select>

    <insert id="insert" parameterType="map">
        insert into
            PD_BASEFORMULA
        (
        <include refid="Add_Column_List"/>
        )
        values(#{companyid},#{name},#{formula},#{isstop},#{type})
    </insert>

    <update id="update" parameterType="map">
        update
            PD_BASEFORMULA
        set
                companyid = #{companyid},
                formula = #{formula},
                isstop = #{isstop},
                type = #{type}        where name = #{whereId}
    </update>
    <delete id="deleteByPrimaryKey" parameterType="map">
        delete from
            PD_BASEFORMULA
        where name = #{id}
    </delete>
    <delete id="deleteAll">
          delete from PD_BASEFORMULA where 1=1

    </delete>
</mapper>